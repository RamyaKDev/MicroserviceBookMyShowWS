package com.theatreapp.model;

import java.util.List;

import jakarta.persistence.Entity;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;
import jakarta.persistence.SequenceGenerator;
import lombok.AllArgsConstructor;
import lombok.Data;
import lombok.NoArgsConstructor;

@NoArgsConstructor
@AllArgsConstructor
@Data
@Entity
public class Screen {
	@Id
	@GeneratedValue(generator = "screen_gen", strategy = GenerationType.AUTO)
	@SequenceGenerator(name = "screen_gen", sequenceName = "screen_seq", initialValue = 101, allocationSize = 1)
	
	
	    private Integer screenId;

	    private String screenName;

	    private Integer theatreId; // reference to Theatre (foreign key across microservice)
}
